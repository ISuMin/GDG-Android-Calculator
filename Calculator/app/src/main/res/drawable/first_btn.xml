<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="@color/main_btn_on_click" />
            <padding
                android:bottom="0dp"
                android:left="10dp"
                android:right="10dp"
                android:top="0dp" >
            </padding>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/main_btn_on_focus" />
            <padding
                android:bottom="0dp"
                android:left="10dp"
                android:right="10dp"
                android:top="0dp" >
            </padding>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/main_btn" />
            <padding
                android:bottom="0dp"
                android:left="10dp"
                android:right="10dp"
                android:top="0dp" >
            </padding>
        </shape>
    </item>
</selector>